@{
}
<h2></h2>
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Film Adı</th>
            <th>Film Puanı</th>
            <th>Yapım Yılı</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <th>@item.rank</th>
                <th>@item.title</th>
                <th>@item.rating</th>
                <th>@item.year</th>
            </tr>
        }
    </table>
</div>